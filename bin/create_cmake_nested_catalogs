#!/bin/sh
lock-install build_catalogs

cvmfs_server transaction atlas.cern.ch
echo "Building catalogs, please wait..."
\ls -d /cvmfs/atlas.cern.ch/repo/sw/software/2{0,1,2}.{0,1,2,6,9}/{*/21.0.*,*/21.9.*,*/20.0.*,*/21.1.*,*/21.2.*,*/21.6.*,*/22.0.*,*/22.2.*,Geant4/share/*,sw/lcg/*/*,tdaq/*,tdaq-common/*} 2>/dev/null | while read dir; do
    [ ! -f $dir/.cvmfscatalog ] && touch $dir/.cvmfscatalog
done
cvmfs_server publish atlas.cern.ch
unlock-install
exit
